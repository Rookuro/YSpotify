{
  "openapi": "3.0.0",
  "info": {
    "title": "YSpotify",
    "description": "Service link API Spotify",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8888",
      "description": "Server ExpressJS"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register a new user",
        "description": "Registers a new user with a pseudo and password.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pseudo": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["pseudo", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful registration"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Log in a user",
        "description": "Logs in a user with a pseudo and password.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "pseudo": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["pseudo", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful, returns JWT token."
          },
          "401": {
            "description": "Unauthorized, login failed."
          }
        }
      }
    },
    "/groups": {
      "post": {
        "summary": "Create or join a group",
        "description": "Allows a user to create a new group or join an existing one.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "groupName": {
                    "type": "string"
                  }
                },
                "required": ["groupName"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully joined or created a group."
          },
          "400": {
            "description": "Bad request."
          }
        }
      }
    },
    "/groups-list": {
      "get": {
        "summary": "List all groups",
        "description": "Retrieves a list of all groups.",
        "responses": {
          "200": {
            "description": "A list of groups",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "groupName": {
                        "type": "string"
                      },
                      "members": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth": {
      "get": {
        "summary": "Spotify Authentication",
        "description": "Redirects to Spotify for user authentication.",
        "responses": {
          "302": {
            "description": "Redirect to Spotify login page."
          }
        }
      }
    },
    "/callback": {
      "get": {
        "summary": "Spotify Authentication Callback",
        "description": "Callback endpoint for Spotify authentication.",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "description": "The code provided by Spotify after user authentication.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful authentication with Spotify."
          },
          "400": {
            "description": "Bad request."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
